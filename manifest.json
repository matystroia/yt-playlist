{
  "manifest_version": 2,
  "name": "YouTube Playlist",
  "version": "0.4",
  "description": "Playlist Extension",
  "background": {
    "scripts": [
      "background/background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/watch*"
      ],
      "js": [
        "content/video.js"
      ]
    },
    {
      "matches": [
        "*://*.youtube.com/results*"
      ],
      "js": [
        "content/search.js"
      ]
    }
  ]
}